<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspinosaAExamen.JokePage"
             Title="Chistes">

    <AbsoluteLayout>
        <Label x:Name="JokeLabel"
               FontSize="18"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.4,0.8,0.3"
               AbsoluteLayout.LayoutFlags="All" />

        <Button Text="Otro chiste"
                Clicked="OnRefreshJokeClicked"
                AbsoluteLayout.LayoutBounds="0.5,1,1,60"
                AbsoluteLayout.LayoutFlags="WidthProportional,XProportional" />
    </AbsoluteLayout>
</ContentPage>
