<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspinosaAExamen.MainPage"
             Title="Inicio">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Label Text="Abigail Espinosa"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <Image Source="foto.jpeg"
                   HeightRequest="180"
                   Aspect="AspectFit" />

            <Button Text="Ir a Chistes"
                    Clicked="OnChistesClicked"
                    HorizontalOptions="Fill" />

            <Button Text="About"
                    Clicked="OnAboutClicked"
                    HorizontalOptions="Fill" />
        </StackLayout>
    </ScrollView>

</ContentPage>
